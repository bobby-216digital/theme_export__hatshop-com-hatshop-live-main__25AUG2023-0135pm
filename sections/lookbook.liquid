<div id="fullpage">

  <!-- Lookbook intro -->
  <div class="section fp-auto-height-responsive lookbook-intro-section" id="section0" >
    <div class="grid-container lookbook-intro">
      <div class="grid-x grid-padding-x align-center align-middle">
        <div class="medium-4 medium-offset-1 cell ">
          <h5>[{{ section.settings.date }}] Lookbook</h5>
          <h1>{{ section.settings.description }}</h1>
