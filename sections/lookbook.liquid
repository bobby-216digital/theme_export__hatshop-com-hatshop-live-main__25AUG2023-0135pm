        </div>
        <div class="medium-6 medium-offset-1 cell ">
          <img src="{{ section.settings.imagetop | img_url: 'master' }}" />
        </div>
      </div>
    </div>
  </div>

  <!-- Lookbook fullscreen slideshow -->
