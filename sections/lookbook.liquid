{% schema %}
  {
    "name": "Lookbook",
    "settings": [
      {
        "id": "date",
        "type": "text",
        "label": "Date"
      },
      {
        "id": "description",
        "type": "richtext",
        "label": "Text"
      },
      {
        "id": "imagetop",
        "type": "image_picker",
        "label": "Image (1130 x 1396)"
      }
    ],
    "blocks": [
      {
        "type": "slider1",
        "name": "First Slider",
        "settings": [
          {
            "id": "slider1image",
            "type": "image_picker",
            "label": "Image"
          },{
           "type": "product",
           "id": "wanthat",
           "label": "I want this hat"
          }
        ]
      },
      {
        "type": "looks1",
        "name": "Look Prod Left Img Right",
        "settings": [
          {
           "type": "product",
           "id": "featured",
           "label": "Feature product"
          },
          {
            "id": "productimage",
            "type": "image_picker",
            "label": "Product Image"
          },
          {
            "id": "productLifestyle",
            "type": "image_picker",
            "label": "Product Lifestyle Photo"
          }
        ]
      },
      {
        "type": "slider2",
        "name": "Second Slider",
        "settings": [
          {
            "id": "slider2image",
            "type": "image_picker",
            "label": "Image"
          },
          {
           "type": "product",
           "id": "wanthat2",
           "label": "I want this hat"
         },
          {
             "type": "checkbox",
             "id": "first",
             "default": false,
             "label": "First Slide"
          },
          {
             "type": "checkbox",
             "id": "last",
             "default": false,
             "label": "Last Slide"
          }
        ]
      },
      {
        "type": "looks2",
        "name": "Look Img Left Prod Right",
        "settings": [
          {
           "type": "product",
           "id": "featured2",
           "label": "Feature product"
          },
          {
            "id": "productimage2",
            "type": "image_picker",
            "label": "Product Image"
          },
          {
            "id": "productLifestyle2",
            "type": "image_picker",
            "label": "Product Lifestyle Photo"
          }
        ]
      }
    ]
  }
{% endschema %}
