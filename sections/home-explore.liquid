        "type": "image_picker",
        "label": "Photo Left (880x1344)"
      },
      {
        "id": "photoLeftTitle",
        "type": "text",
        "label": "Photo Left Title"
      },
      {
        "id": "photoLeftURL",
        "type": "text",
        "label": "Photo Left URL"
      },
      {
        "id": "photoRight",
        "type": "image_picker",
        "label": "Photo Right (1336x828)"
      },
      {
        "id": "photoRightURL",
        "type": "text",
        "label": "Photo Right URL"
      },
      {
        "id": "hatsTitle",
        "type": "text",
        "label": "Hats Title"
      },
      {
       "type": "product",
       "id": "featured1",
       "label": "Hat Left "
      },
      {
        "id": "hatType1",
        "type": "text",
        "label": "Hat Left Category"
      },
      {
        "id": "hatLink1",
        "type": "text",
        "label": "Hat Left Category Link"
      },
      {
       "type": "product",
       "id": "featured2",
       "label": "Hat Right"
      },
      {
        "id": "hatType2",
        "type": "text",
        "label": "Hat Right Category"
      },
      {
        "id": "hatLink2",
        "type": "text",
        "label": "Hat Right Category Link"
      }
    ]
  }
{% endschema %}
