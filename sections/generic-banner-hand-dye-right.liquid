<!-- Icon header video and/or image -->
<div class="grid-container">
	<div class="grid-x grid-padding-x align-middle section-space80">
		<div class="medium-5 cell small-order-2 medium-order-1">
			<div class="support-text">
				<h5>{{ section.settings.handdyeBannerSmalltitleR }}</h5>
				<h3>{{ section.settings.handdyeBannertitleR }}</h3>
				<div class="banner-text">{{ section.settings.handdyeBannerDescriptionR }}</div>
				{% if section.settings.handdyeBannerLinkR %}<a href="{{ section.settings.handdyeBannerLinkR }}" class="cta dark link-activate" data-hover-id="hdbR">{{ section.settings.handdyeBannerLinkTextR }}</a>{%endif %}
			</div>
		</div>
		<div class="large-7 cell small-order-1 medium-order-2">
			<a href="{{ handdyeBannerLinkR }}" class="zoom" data-hover-id="hdbR"><img src="{{ section.settings.handdyeBannerImgageR | img_url: 'master' }}" alt=""></a>
		</div>
    </div>
</div>
{% schema %}
  {
    "name": "Hand Dye Banner",
    "settings": [
      {
        "id": "handdyeBannerImgageR",
        "type": "image_picker",
        "label": "Banner Image - Size: 1400px x 1000px"
      },
      {
        "id": "handdyeBannerSmalltitleR",
        "type": "text",
        "label": "Small Text above title"
      },
      {
        "id": "handdyeBannertitleR",
        "type": "text",
        "label": "Title"
      },
      {
        "id": "handdyeBannerDescriptionR",
        "type": "richtext",
        "label": "Description"
      },
      {
        "id": "handdyeBannerLinkR",
        "type": "text",
        "label": "Link"
      },
      {
        "id": "handdyeBannerLinkTextR",
        "type": "text",
        "label": "Link Text"
      }
    ]
  }
{% endschema %}
