<!-- Icon header video and/or image -->
<div class="grid-container">
	<div class="grid-x grid-padding-x align-middle section-space80">
		<div class="large-7 cell">
			<a href="{{ handdyeBannerLink }}" class="zoom" data-hover-id="hdb"><img src="{{ section.settings.handdyeBannerImgage | img_url: 'master' }}" alt=""></a>
		</div>
		<div class="medium-5 cell">
			<div class="support-text">
			<h5>{{ section.settings.handdyeBannerSmalltitle }}</h5>
			<h3>{{ section.settings.handdyeBannertitle }}</h3>
		    <div class="banner-text">{{ section.settings.handdyeBannerDescription }}</div>
			 {% if section.settings.handdyeBannerLink %}<a href="{{ section.settings.handdyeBannerLink }}" class="cta dark link-activate" data-hover-id="hdb">{{ section.settings.handdyeBannerLinkText }}</a>{%endif %}
			</div>
		</div>
	</div>
</div>
{% schema %}
  {
    "name": "Hand Dye Banner",
    "settings": [
      {
        "id": "handdyeBannerImgage",
        "type": "image_picker",
        "label": "Banner Image - Size: 1400px x 1000px"
      },
      {
        "id": "handdyeBannerSmalltitle",
        "type": "text",
        "label": "Small Text above title"
      },
      {
        "id": "handdyeBannertitle",
        "type": "text",
        "label": "Title"
      },
      {
        "id": "handdyeBannerDescription",
        "type": "richtext",
        "label": "Description"
      },
      {
        "id": "handdyeBannerLink",
        "type": "text",
        "label": "Link"
      },
      {
        "id": "handdyeBannerLinkText",
        "type": "text",
        "label": "Link Text"
      }
    ]
  }
{% endschema %}
