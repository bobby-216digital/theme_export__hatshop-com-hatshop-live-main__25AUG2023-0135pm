<!-- Latest Hats for Women's, Men's --> 
<section class="home-latest">
  <div class="grid-container">

    {% for block in section.blocks %}
    {% case block.type %}

    {% when 'homewomens' %}
    <!-- Women's latest -->
    <div class="grid-x grid-padding-x align-middle align-justify section-space">
      <div class="medium-2 cell home-latest-text-1 small-order-2 medium-order-1">
	  	<h2><a href="{{ block.settings.womensButtonURL }}" class="link-activate" data-hover-id="womenLink">{{ block.settings.womensTitle }}</a></h2>
        <a href="{{ block.settings.womensButtonURL }}" class="cta dark link-activate" data-hover-id="womenLink">{{ block.settings.womensButtonText }}</a>
      </div>
      <div class="medium-9 cell small-order-1 medium-order-2">
        <div class="relative">
          <a href="{{ block.settings.womensButtonURL }}" class="zoom latest-img women-home-img" data-hover-id="womenLink"><img src="{{ block.settings.womensImage | img_url: 'master' }}" alt="{{ block.settings.womensTitle }}" /></a>
		  <span class="women-texture" style="background:url({{ block.settings.womensTexture | img_url: 'master' }}) no-repeat top left/cover;width: 31%; height: 62%;position: absolute; z-index: 1;left: -33px; top: -33px;"></span>
        </div>
      </div>
    </div>

    {% when 'homemens' %}
    <!-- Men's latest -->
    <div class="grid-x grid-padding-x align-middle align-justify section-space80">
      <div class="medium-9 cell  small-order-1 medium-order-1">
        <div class="relative">
          <a href="{{ block.settings.mensButtonURL }}" class="zoom latest-img men-home-img" data-hover-id="menLink"><img src="{{ block.settings.mensImage | img_url: 'master' }}" alt="{{  block.settings.mensTitle }}" /></a>
		  <span class="men-texture" style="background: url({{ block.settings.mensTexture | img_url: 'master' }}) no-repeat top right/cover;width: 77%; height: 96%;position: absolute;z-index: 1; right: -28px;top: -38px;"></span>
        </div>
      </div>
      <div class="medium-2 cell home-latest-text-2 small-order-2 medium-order-2">
	  	<h2><a href="{{ block.settings.mensButtonURL }}" class="link-activate shop-men-link" data-hover-id="menLink">{{ block.settings.mensTitle }}</a></h2>
        <a href="{{ block.settings.mensButtonURL }}" class="cta dark shop-men-link link-activate" data-hover-id="menLink">{{ block.settings.mensButtonText }}</a>
      </div>
    </div>

{% endcase %}
{% endfor %}

  </div>
</section>
