<!-- UMH Creations background -->
<section class="umh-creations-single" style="background-image:url('http://gooseworksdev.com/hs/sample/umh-collab-bg.png')">

  <!-- UMH Creations details-->
  <div class="grid-container">
    <div class="grid-x grid-padding-x">
  	  <div class="medium-12 cell">
  	  <p class="small-body-title breadcrumb"><a href="/blogs/creations"><i class="fas fa-chevron-left"></i>  creations</a></p></div>
  	  </div>
      <div class="medium-12 cell">
        <h1>{{ article.title }}</h1>
		 <img src="http://gooseworksdev.com/hs/sample/atelier-line.png" />
      </div>
    </div>
  <div class="grid-container">
    <div class="grid-x grid-padding-x" id="post">
      <div class="large-3 cell data-sticky-container">
        <div class="sticky" data-sticky data-anchor="post">
          <p>{{ article.content }}</p>
        </div>
      </div>
      <div class="large-9 cell creations-post">
        <div class="grid-x grid-padding-x">
		  {% for value in article.metafields.accentuate.creationsImage
		   %}
		   {% if article.metafields.accentuate.creationsrowtype[forloop.index0] == 'One Image' %}
          <!-- Full width image row -->
          <div class="large-12 cell bottom50">
            <img src="{{ article.metafields.accentuate.creationsImage[forloop.index0]
             }}" />
          </div>
		  {% elsif article.metafields.accentuate.creationsrowtype[forloop.index0] == 'Two Images' %}
		  <!-- Two images side by side -->
		  	<div class="large-6 cell bottom50">
		    <img src="{{ article.metafields.accentuate.creationsImage[forloop.index0]
		     }}" />
		  </div>
		  <div class="large-6 cell bottom50">
		    <img src="{{ article.metafields.accentuate.creationsImageTwo
		    [forloop.index0]
		     }}" />
		  </div>
		  {% endif %}
		  {% endfor %}

      </div>
    </div>
  </div>
</section>
