{% section 'umhabout-header' %}

{% section 'umhabout-intro' %}

{% section 'umhabout-content' %}

{% for article in blogs.umh-stories.articles %}
<div class="reveal umh-story-pop " id="story{{ article.id }}" data-reveal>
	<!-- Atelier Single Intro -->
  	<section class="full-page atelier-intro umh-story" style="background-image:url('{{ article.image.src | img_url: 'master' }}')">
  		<button class="close-button" data-close aria-label="Close modal" type="button">
  			<span aria-hidden="true">&times;</span>
  		</button>
  		<div class="grid-container">
  			<div class="grid-x grid-padding-x">
  				<div class="medium-12 cell text-center align-middle">
  					<div id="story_splash_elements">
  						<div id="story_splash_title">
  							<h1>{{ article.title }}</h1>
  							<div id="story_splash_read">
  								<!--<a href="#story-bottom{{ article.id }}" data-smooth-scroll><img src="https://cdn.shopify.com/s/files/1/0031/1699/0564/t/4/assets/UMH-arrow.png?6319" style="width: 31px;"></a>-->
  							</div>
  						</div>
  					</div>
  				</div>
  			</div>
  		</div>
  	</section>
  	<section class="story-content-pop" id="story-bottom{{ article.id }}">
  		<div class="grid-container">
  			<div class="grid-x grid-padding-x">
  				<div class="medium-3 cell">
  					<!-- Go to www.addthis.com/dashboard to customize your tools --> <div class="addthis_inline_share_toolbox"></div>
  				</div>
  				<div class="medium-6 cell">
  					{{ article.content }}
  				</div>
  			</div>
  		</div>
  	</section>
</div>
{% endfor %}
