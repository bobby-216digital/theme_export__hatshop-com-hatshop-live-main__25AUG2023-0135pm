  letter-spacing: 0;
  text-align: center;
  line-height: 22px;
}
.popupIntro {
  font-size: 15px;
  color: #AB7A1C !important;
  letter-spacing: 1.41px;
  text-align: center;
  line-height: 23px;
  text-transform: uppercase;
}
.popupWrap form {
  margin-top: 40px;
}
.popupWrap button {
  width: 100%;
  margin-top: 7px;
}
.popupLine {
  display: block;
  margin: 0 auto;
}
.popup2 h2 {
  font-size: 20px;
  line-height: 26px;
