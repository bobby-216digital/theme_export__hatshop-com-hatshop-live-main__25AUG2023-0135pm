<div class="header-spacer"></div>

<!-- Press List -->
<section class="press-list">
	<div class="grid-container">
		<div class="grid-x grid-padding-x AjaxinateLoop">
			{% paginate blog.articles by 44 %}
			{% for article in blog.articles %}
			<!-- Press single item -->
			<div class="large-3 cell press-item text-center">
				<a href="{{ article.url }}" class="zoom" data-hover-id="{{ article.id}}">
					<div class="press-double relative">
						{% if article.metafields.accentuate.press_landing_main %}
						<img src="{{ article.metafields.accentuate.press_landing_main | img_url: '452x632', crop: 'center' }}" class="press-main-landing " />
						{% else%}
						<img src="{{ article.image.src | img_url: '452x632', crop: 'center' }}" class="press-main-landing " />
						{% endif %}
						{% if article.metafields.accentuate.presslandingextraimage %}
						<img src="{{ article.metafields.accentuate.presslandingextraimage }}" class="press-second-vertical" />
						{% endif %}
						{% if article.metafields.accentuate.pressLandingExtraImageHor %}
						<img src="{{ article.metafields.accentuate.pressLandingExtraImageHor }}" class="press-second-horizontal" />
						{% endif %}
					</div>
				</a>
				<h3 class="h4 titleCase"><a href="{{ article.url }}" class="link-activate press-offset-title" data-hover-id="{{ article.id}}">{{ article.excerpt }}</a></h3>
				<h2><a href="{{ article.url }}" class="link-activate" data-hover-id="{{ article.id}}">{{ article.title }}</a></h2>
			</div>
			{% endfor %}
		</div>
		<div class="grid-x grid-padding-x">
			<div class="AjaxinatePagination large-12 cell text-center">
				{% if paginate.next %}
				<a href="{{ paginate.next.url }}" onclick="jplist.refresh();">Load More</a>
				{% endif %}
			</div>
			{% endpaginate %}
		</div>
	</div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    var endlessClick = new Ajaxinate({
      method: 'click'
    });
  });
</script>
