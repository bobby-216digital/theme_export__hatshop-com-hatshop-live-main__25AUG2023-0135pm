<!-- Full page picture intro -->
<section class="full-page umh-collab-intro" style="background:url('http://gooseworksdev.com/hs/sample/umh-collab-bg.png') no-repeat center center/cover">
	<div class="grid-container">
		<div class="grid-x grid-padding-x">
			<div class="medium-offset-2 medium-3 cell small-order-2 medium-order-1">
				<!-- List of UMH Collaborators -->
				<div class="umh-collab-intro-container">
				  	<h1 class="show-for-large">Collaborations</h1>
				  	{% for article in blog.articles %}
				  	{% unless article.tags contains "hide" %}
				    <a href="{{ article.url }}" data-hover-id="c{{ article.id }}" class="link-activate">{% if article.metafields.accentuate.short_title %}{{ article.metafields.accentuate.short_title }}{% else %}{{ article.title }}{% endif %}</a>
					{% endunless %}
					{% endfor %}
				</div>
			</div>
			<div class="medium-5 cell relative small-order-1 medium-order-2">
				<span class="umh-collab-intro-container"><h1 class="hide-for-large">Collaborations</h1></span>
				<a href="#" class="zoom collab-main active" style="background-color: transparent;"><img src="https://cdn.shopify.com/s/files/1/0031/1699/0564/t/4/assets/collab-default.png?11539" alt="UMH Collaborations" /></a>
			  	{% for article in blog.articles %}
			  	{% unless article.tags contains "hide" %}
			  	{% if article.metafields.accentuate.landing_image %}
			  	<a href="#" style="background-color: transparent;" class="zoom collab-main" data-hover-id="c{{ article.id }}"><img src="{{ article.metafields.accentuate.landing_image }}" alt="{{ article.title }}" /></a>
			  	{% else %}

			  	{% for value in  article.metafields.accentuate.collab_image1  limit: 1 %}
			  	<a href="#" style="background-color: transparent;" class="zoom collab-main" data-hover-id="c{{ article.id }}"><img src="{{ article.metafields.accentuate.collab_image1[forloop.index0] }}" alt="{{ article.title }}" /></a>
			  	{% endfor %}
			  	{% endif %}
			  	{% endunless %}
			  	{% endfor %}
			</div>
		</div>
	</div>
</section>
