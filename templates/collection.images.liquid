<div class="header-spacer"></div>



          {% paginate collection.products by 50 %}
          {% for product in collection.products %}
          {{ product.title }}<Br />
         {% for image in product.images %}
        {{ image.src | img_url: 'master' }}<br />
         {% endfor %}
         {% endfor %}


         {%- if paginate.pages > 1 -%}
         	     <nav role="navigation">
         	       <ol class="pagination">
         	         {%- if paginate.previous-%}
         	           <li class="visuallyhidden">
         	             <a href="{{ paginate.previous.url }}">
         	               <span aria-hidden="true">&laquo;</span>
         	               Previous <span class="visuallyhidden">page</span>
         	             </a>
         	           </li>
         			   <li class="">

         			   	<a href="{{ paginate.next.url }}"><i class="far fa-long-arrow-alt-left"></i></a>
         			   </li>
         	         {%- else -%}
         	           <li class="disabled visuallyhidden">
         	             <span aria-hidden="true">&laquo;</span>
         	             Previous <span class="visuallyhidden">page</span>
         	           </li>
         	         {%- endif -%}

         	         {%- for part in paginate.parts -%}
         	           {%- if part.is_link -%}
         	             <li>
         	               <a href="{{ part.url }}">
         	                 <span class="visuallyhidden">page</span> {{ part.title }}
         	               </a>
         	             </li>
         	           {%- else -%}
         	             {%- if part.title == paginate.current_page -%}
         	               <li class="active" aria-current="page">
         	                 <span class="visuallyhidden">page</span> {{ part.title }}
         	               </li>
         	             {%- else -%}
         	               <li>
         	                 <span class="visuallyhidden">page</span> {{ part.title }}
         	               </li>
         	             {%- endif -%}
         	           {%- endif -%}
         	         {%- endfor -%}

         	         {%- if paginate.next -%}
         	           <li class="visuallyhidden">
         	             <a href="{{ paginate.next.url }}">
         	               Next <span class="visuallyhidden">page</span>
         	               <span aria-hidden="true">&raquo;</span>
         	             </a>
         	           </li>
         			   <li class="">

         			   	<a href="{{ paginate.next.url }}"><i class="far fa-long-arrow-alt-right"></i></a>
         			   </li>
         	         {%- else -%}
         	           <li class="disabled visuallyhidden">
         	             Next <span class="visuallyhidden">page</span>
         	             <span aria-hidden="true">&raquo;</span>
         	           </li>
         	         {%- endif -%}
         	       </ol>
         	     </nav>
         	   {%- endif -%}
         	{% endpaginate %}
